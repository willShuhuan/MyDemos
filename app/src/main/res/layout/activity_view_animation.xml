<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsh.txlessons.viewanimation.ViewAnimationActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/slmh"
        android:visibility="gone"/>

    <com.dsh.txlessons.viewanimation.CircleView
        android:id="@+id/circleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.dsh.txlessons.viewanimation.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <com.dsh.txlessons.viewanimation.PointFView
        android:id="@+id/pointView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.dsh.txlessons.viewanimation.ProvinceView
        android:id="@+id/proviceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>